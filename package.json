{
  "name": "belajar-nodejs-unit-test",
  "version": "1.0.0",
  "description": "Belajar NodeJs Unit Test",
  "main": "./src/index.js",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "author": "Christian",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tyn-Tian/Belajar-NodeJS-Unit-Test"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.6",
    "@types/jest": "^29.5.12",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0"
  }
}
